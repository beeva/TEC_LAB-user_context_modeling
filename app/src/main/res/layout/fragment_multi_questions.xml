<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:src="@drawable/img_multi_question" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/multi_questions_title"
            android:layout_marginVertical="24dp"
            android:layout_marginHorizontal="24dp"
            android:textSize="20dp"
            android:textFontWeight="600"
            android:textAlignment="center"
            android:textColor="@color/colorDark"/>

        <Button
            android:id="@+id/set_status_work"
            android:layout_width="244dp"
            android:layout_height="36dp"
            android:layout_marginVertical="6dp"
            android:text="@string/status_work"
            style="@style/AppTheme.RoundedSecondaryButton"/>

        <Button
            android:id="@+id/set_status_still"
            android:layout_width="244dp"
            android:layout_height="36dp"
            android:layout_marginVertical="6dp"
            android:text="@string/status_still"
            style="@style/AppTheme.RoundedSecondaryButton" />

        <Button
            android:id="@+id/set_status_transit"
            android:layout_width="244dp"
            android:layout_height="36dp"
            android:layout_marginVertical="6dp"
            android:text="@string/status_transit"
            style="@style/AppTheme.RoundedSecondaryButton"/>

        <Button
            android:id="@+id/set_status_personal"
            android:layout_width="244dp"
            android:layout_height="36dp"
            android:layout_marginVertical="6dp"
            android:text="@string/status_personal"
            style="@style/AppTheme.RoundedSecondaryButton"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/question_advertisement"
        android:layout_marginVertical="18dp"
        android:layout_marginHorizontal="24dp"
        android:textSize="16dp"/>
</LinearLayout>